{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "type":"cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "openocd",
            "device": "Pico2040",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "configFiles":[
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "searchDir": ["C:/Pico/openocd_picoprobe/tcl"],
            "svdFile": "C:/Pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true
        }
    ]
}